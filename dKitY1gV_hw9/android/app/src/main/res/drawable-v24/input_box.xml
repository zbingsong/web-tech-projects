<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  https://stackoverflow.com/questions/9224560/how-to-change-the-border-colorun-focused-of-an-edittext  -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/textColor" />
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
        </shape>
    </item>
</layer-list>